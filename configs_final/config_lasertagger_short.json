{
  "dataset_reader": {
    "type": "TaskSIReader",
    "tokenizer": {
      "type": "BertTokenizer",
      "pretrained_name": "/home/hawkeoni/Semeval2020_task11/tokenizer/vocab.txt"
    },
    "token_indexers": {
      "tokens": {
        "type": "pretrained_transformer",
        "model_name": "bert-base-cased"
        }
      },
      "use_bert": true
  },
  "train_data_path": "data_parsed/fulltrain.txt",
  "model": {
    "type": "LaserTagger",
    "embedder": {
      "type": "basic",
